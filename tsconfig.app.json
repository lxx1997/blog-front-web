{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.ts"],
  "exclude": ["src/**/__tests__/*"],
  "resolveJsonModule": true,
  "esModuleInterop": true ,
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "nodenext",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
